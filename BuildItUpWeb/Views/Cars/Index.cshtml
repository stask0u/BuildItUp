@model IEnumerable<BuildItUp.Models.Entities.Car>

@{
    ViewData["Title"] = "Cars";
}

<h1 class="section-heading">Cars</h1>

<a asp-action="Create" class="btn btn-primary mb-3">
    <i class="bi bi-plus-circle"></i> Add Car
</a>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Model)</th>
            <th>Engine</th>
            <th>Company</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model)
        {
                <tr>
                    <td>@car.Model</td>
                    <td>
                    @if (car.Engine != null)
                    {
                                <strong>@car.Engine.EngineModel</strong>
                                <br />
                                <small class="text-muted">@car.Engine.Horsepower hp</small>
                    }
                    else
                    {
                                <span class="text-muted">No engine</span>
                    }
                    </td>
                    <td>
                    @if (car.Engine?.Company != null)
                    {
                        @car.Engine.Company.Name
                    }
                    else
                    {
                                <span class="text-muted">No company</span>
                    }
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@car.Id" class="btn btn-sm btn-info">Details</a>
                        <a asp-action="Edit" asp-route-id="@car.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@car.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
        }
    </tbody>
</table>
